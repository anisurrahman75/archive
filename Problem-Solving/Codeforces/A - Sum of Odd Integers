#include<bits/stdc++.h>
using namespace std;
int main ()
{

    int t,n,k,tem;
    cin>>t;
    while(t--)
    {
        cin>>n>>k;
                int cs=tem=0;
        if ( n %2==0)
        {
            if ( k%2==0)
            {
                tem = sqrt(n);
                if ( k <=tem)
                    cs=1;
            }
        }
        else
        {
             if ( k%2==1)
            {
                tem = sqrt(n);
                if ( k <=tem)
                    cs=1;
            }

        }
        if (cs==1)
         cout<<"YES\n";
         else
            cout<<"NO\n";




    }


    return 0;
}
