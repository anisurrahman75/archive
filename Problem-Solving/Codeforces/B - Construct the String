#include<bits/stdc++.h>
using namespace std;
int main ()
{
    int t,n,a,b;
    cin>>t;
    while(t--)
    {
        cin>>n>>a>>b;
        for (int i=0,x=97,c=0; i<n; i++)
        {
            if (c==b)
            {
                x=97;
                c=0;
            }
            if (x==123)
            {
                x=97;
            }
            cout<<char(x);
            x++;
            c++;
 
        }
        cout<<endl;
 
 
    }
 
 
 
    return 0;
}
