#include<bits/stdc++.h>
using namespace std;
int main ()
{
    long long int t,a,b,c,d,x,y;
    double ans=0.00;
    cin>>t;
    while( t--)
    {
       cin>>a>>b>>c>>d;
       x=b-a;
       y=c+d;
       ans=x/(float)y;
       if (ans==(int)ans)
       {
           cout<<(int)ans<<endl;
       }
       else
       {
           cout<<-1<<endl;
       }


    }



    return 0;
}
