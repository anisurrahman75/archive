#include<iostream>
#include<stdio.h>
#include<math.h>
using namespace std;
int main()
{
   double a,b,c,s,ans;

    while (scanf("%lf%lf%lf", &a, &b, &c) == 3){

         s = (a + b + c) / 2.0;
         ans = (4.0 / 3.0) * sqrt(s * (s - a) * (s - b) * (s - c));

        if(ans > 0)
            printf("%0.3lf\n", ans);
        else
            printf("-1.000\n");

    }
    return 0;
}
